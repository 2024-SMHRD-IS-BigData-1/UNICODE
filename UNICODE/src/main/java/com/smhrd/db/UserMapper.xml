<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smhrd.db.UserMapper">
  
  <insert id="join" parameterType="User">
  	insert into user_info values(#{id}, #{pw} , #{name}, #{tel}, sysdate, #{region}, #{email})
  </insert>
  
  <select id="IDCheck" parameterType="String" resultType="User">
  	select * from user_info where u_id=#{id}
  </select>
  
  <select id="login" parameterType="User" resultType="User">
  	select * from user_info where u_id = #{u_id} and u_pw = #{u_pw} 
  </select>
</mapper>